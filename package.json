{
  "name": "beit-knowledge-base",
  "version": "0.1.0",
  "description": "BEIT Knowledge Base - Offline AI-powered knowledge management system",
  "author": "BEIT",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "postbuild": "node scripts/setup-standalone.js && node scripts/copy-native-libs.js",
    "start": "next start -p 3335",
    "lint": "eslint",
    "seed": "node scripts/offline/seed.js",
    "precompute-embeddings": "node scripts/precompute-embeddings.js",
    "precompute-embeddings:openai": "node scripts/precompute-embeddings-openai.js",
    "precompute-embeddings:transformers": "node scripts/precompute-embeddings-transformers.js",
    "download-onnx-model": "node scripts/download-onnx-model.js",
    "download-transformers-model": "node scripts/download-transformers-model.js",
    "verify": "node scripts/verify-build-prerequisites.js",
    "test-setup": "node scripts/test-setup.js",
    "electron": "electron .",
    "electron:dev": "electron .",
    "clean": "rm -rf dist",
    "electron:build": "npm run verify && npm run clean && npm run build && electron-builder",
    "electron:build:mac": "npm run verify && npm run clean && npm run build && electron-builder --mac",
    "electron:build:mac:quick": "npm run clean && npm run build && npx electron-builder --mac",
    "electron:build:win": "npm run verify && npm run clean && npm run build && electron-builder --win"
  },
  "main": "electron/main.js",
  "dependencies": {
    "@radix-ui/react-slot": "^1.1.2",
    "@xenova/transformers": "^2.17.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "next": "16.0.1",
    "next-intl": "^4.4.0",
    "onnxruntime-node": "^1.18.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "tailwind-merge": "^2.5.2",
    "tsx": "^4.20.6"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "electron": "^39.1.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "build": {
    "appId": "com.beit.knowledge-base",
    "productName": "BEIT Knowledge Base",
    "directories": {
      "output": "dist"
    },
    "files": [
      ".next/standalone/**/*",
      ".next/static/**/*",
      "electron/**/*",
      "data/**/*",
      "models/**/*",
      "package.json",
      "!.next/standalone/node_modules/.cache/**/*",
      "!models/**/*.safetensors.index.json",
      "!data/**/*.backup.*"
    ],
    "asar": false,
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "mac": {
      "category": "public.app-category.education",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "public/icon.png",
      "artifactName": "${productName}-${version}-mac.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "public/icon.png",
      "artifactName": "${productName}-${version}-win-${arch}.${ext}",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "artifactName": "${productName}-${version}-setup.${ext}"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.exe"
    }
  }
}
